% основные используемые стили
% стиль для стрелки
\tikzset{
    >=latex,
    % платформа: пол или потолок  
    interface/.style = {
        postaction = {
            draw,
            decorate,
            decoration = {
                border,
                angle = 45,
                amplitude = 0.2cm,
                segment length = 1mm
            }
        }
    },
    perpinterface/.style = {
        postaction = {
            draw,
            decorate,
            decoration = {
                ticks,
                raise = 0.07cm,
                amplitude = 0.07cm,
                segment length = 1mm
            }
        }
    },
    % пружина
    spring/.style = {
        decorate,
        decoration = {
            coil,
            amplitude = 1mm,
            segment length = 1mm
        }
    },
	% заряд, вершина, просто точка
    dot/.style = {
        inner sep = 0mm,
        minimum size = 0.18cm,
        fill,
        circle
    },
    % граница воды
    water edge/.style = {
    	draw,
		decorate,
		decoration = {
			snake,
			amplitude = 0.4,
			segment length = 10
		}
    },
	% стрелка в середине отрезка
    marrow/.style = {
        postaction = {
            draw,
            decorate,
            decoration = {
                markings,
                mark = at position 0.6 with {\arrow{latex}}
            }
        }
    },
    platf/.style = {
        /utils/exec = \csname tikz@options\endcsname,
        decoration = {
            show path construction,
            lineto code = {
                \fill (\tikzinputsegmentfirst) --
                    ($(\tikzinputsegmentfirst)!0.15cm!90:(\tikzinputsegmentlast)$) --
                    ($(\tikzinputsegmentlast)!0.15cm!-90:(\tikzinputsegmentfirst)$) --
                    (\tikzinputsegmentlast);
                \draw (\tikzinputsegmentfirst) -- (\tikzinputsegmentlast);
            }
        },
        decorate
    },
    platform/.style = {
        very thick,
        pattern = north west lines,
        platf
    }
}


