			(.05, .13) rectangle ++ (.06, .07)
			(.17, .13) rectangle ++ (.06, .07)
			(.29, .13) rectangle ++ (.06, .07);
		\draw [ultra thin] 
			(.05, .09) to ++ (.3, 0)
