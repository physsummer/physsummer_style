\newcommand{\ordday}[1]{
	\multirow{3}{*}{\textbf{#1}}
    \orddaycontinue
}

\newcommand{\orddaycontinue}[9]{
	& {#1} & {#2} & {#3}\\
	\cline{2 - 4}
	& {#4} & {#5} & {#6}\\
    \cline{2 - 4}
	& {#7} & {#8} & {#9}\\
    \hlinewd{2pt}
}

\newcommand{\fullday}[2]{
	\multirow{3}{*}{\textbf{#1}} & \multicolumn{3}{c?{2pt}}{\multirow{3}{*}{\textbf{#2}}} \\
	                             & \multicolumn{3}{c?{2pt}}{}                             \\
	                             & \multicolumn{3}{c?{2pt}}{}                             \\
    \hlinewd{2pt}
}

\newcommand{\firstcommonday}[8]{
	\multirow{3}{*}{\textbf{#1}} & \multicolumn{3}{c?{2pt}}{{#2}}\\
	\cline{2 - 4}
	& {#3} & {#4} & {#5}\\
    \cline{2 - 4}
	& {#6} & {#7} & {#8}\\
    \hlinewd{2pt}
  }

\newcommand{\secondcommonday}[8]{
	\multirow{3}{*}{\textbf{#1}} & {#2} & {#3} & {#4}\\
	\cline{2 - 4}
	& multicolumn{3}{c?{2pt}}{{#5}}\\
	\cline{2 - 4}
	& {#6} & {#7} & {#8}\\
    \hlinewd{2pt}
}

\newcommand{\thirdcommonday}[8]{
	\multirow{3}{*}{\textbf{#1}} & {#2} & {#3} & {#4}\\
	\cline{2 - 4}
  	& {#5} & {#6} & {#7}\\
    \cline{2 - 4}
	& multicolumn{3}{c?{2pt}}{{#8}}\\
    \hlinewd{2pt}
}

\newcommand{\fulldaytwogroup}[2]{
	\multirow{3}{*}{\textbf{#1}} & \multicolumn{2}{c?{2pt}}{\multirow{3}{*}{\textbf{#2}}} \\
	& \multicolumn{2}{c?{2pt}}{}                             \\
	& \multicolumn{2}{c?{2pt}}{}                             \\
	\hlinewd{2pt}
}

\newcommand{\orddaytwogroup}[1]{
	\multirow{3}{*}{\textbf{#1}}
	\orddaycontinuetwogroup
}

\newcommand{\orddaycontinuetwogroup}[6]{
	& {#1} & {#2}\\
	\cline{2 - 3}
	& {#3} & {#4}\\
	\cline{2 - 3}
	& {#5} & {#6}\\
	\hlinewd{2pt}
}


