\newcommand{\drawfig}[2]{
    \begin{figure}[ht]
        \centering
        #2
        \caption{}
        \vspace{-20pt}
        \label{fig:#1}
    \end{figure}
}

\newcommand{\figcap}[2]{
    \drawfig{#1}{\includegraphics[width = #2\textwidth]{#1}}
}

\newcommand{\wrapfigcap}[2]{
    \begin{wrapfigure}{r}{#2\textwidth}
        \centering
        \vspace{-20pt}
        \includegraphics[width = #2\textwidth]{#1}
        \vspace{-20pt}
        \caption{}
        \vspace{-20pt}
        \label{fig:#1}
    \end{wrapfigure}
}

\newcommand{\drawwrap}[3]{
    \begin{wrapfigure}{r}{#2\textwidth}
        \centering
        \vspace{-20pt}
        #3
%        \vspace{-20pt}
        \vbox{~}
        \caption{}
        \vspace{-20pt}
        \label{fig:#1}
    \end{wrapfigure}
}

\newcommand{\sidebyside}[4]{
    \begin{figure}[htb]
        \hfill
        \begin{minipage}{#2\textwidth}
            \centering
            \includegraphics[width = 0.98\textwidth]{#1}
            \caption{}
            \label{fig:#1}
        \end{minipage}%
        \hfill
        \begin{minipage}{#4\textwidth}
            \centering
            \includegraphics[width = 0.98\textwidth]{#3}
            \caption{}
            \label{fig:#3}
        \end{minipage}
        \hfill
        \hspace*{0cm}
    \end{figure}
}

\newcommandx{\drawsidebyside}[6][5 = 0.48, 6 = 0.48]{
