        \begin{minipage}{#5\textwidth}
            \centering
            #2
        \end{minipage}%
        \begin{minipage}{#6\textwidth}
            \centering
            #4
        \end{minipage}
        \hfill%
        \begin{minipage}[t]{#5\textwidth}
            \centering
            \caption{}
            \label{fig:#1}
        \end{minipage}%
        \begin{minipage}[t]{#6\textwidth}
            \centering
            \caption{}
            \label{fig:#3}
        \end{minipage}
    \end{figure}
}



