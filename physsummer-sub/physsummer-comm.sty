    \setcounter{#1comment}{1}
    \expandafter\newcommand\csname #1comment\endcsname[1]{%
        \ifdefined
            \DONOTINSERTCOMMENTS
            \relax
        \else
        \par\noindent
            \ifteacher{
                \ifexpcriteria
                \else
                    \todo[inline, size = \small, backgroundcolor = {#3}]{
                        \arabic{#1comment}:
                        {##1} --~\textbf{#2}
                    }
                    \addtocounter{#1comment}{1}
                \fi        
             }
            \fi
        \fi
    }
}

