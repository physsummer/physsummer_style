\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{physsummer-exp}

\RequirePackage{tabularx}
\RequirePackage{makecell}
\RequirePackage{enumitem}
\RequirePackage{etoolbox}
\RequirePackage{xparse}


\newif\ifexpcriteria
\newcommand{\expcriteriamode}{\expcriteriatrue}
\newcommand{\expcriteriamodeoff}{\expcriteriafalse}


\newcommand{\exptitle}[1]{
    \section{#1}
}

\newcommand{\expequipment}[1]{
    \paragraph{Оборудование.} #1
}



\newcommand{\exptask}[1]{
    \ifexpcriteria
    \else
        #1
    \fi
}

\newcommand{\expcomment}[1]{
    \ifexpcriteria
    \else
    \teacher{
        \paragraph{Комментарии.} #1
    }
    \fi
}

\newcounter{expcriteriarow}
\setcounter{expcriteriarow}{1}


\ExplSyntaxOn
\fp_new:N \g_total_sum_exp_fp

\NewDocumentCommand{\addvalueexpresults}{m}{
  \fp_gadd:Nn \g_total_sum_exp_fp {#1}
}

\NewDocumentCommand{\resetexpresults}{}{
  \fp_zero:N \g_total_sum_exp_fp 
}

\NewDocumentCommand{\displayexpresults}{}{
  \fp_to_decimal:N \g_total_sum_exp_fp
}

\NewDocumentCommand{\criteriainit}{m}{
    \vspace{2pt}
    \setcounter{expcriteriarow}{1}
    \resetexpresults
    \ifexpcriteria
    \noindent
    \begin{tabularx}{\textwidth}{|c|X|c|C{1.5cm}|}
      \cline{1-4}
      \makecell*[{{C{0.5cm}}}]{\textbf{\textnumero}} &
      \makecell*[{{p{\hsize}}}]{\textbf{Критерий}} &
      \makecell*[{{C{1.5cm}}}]{\textbf{Баллы}} &
      \makecell*[{{C{1.5cm}}}]{\textbf{Оценка}} \\
    \end{tabularx}
    \else
    \noindent
    \begin{tabularx}{\textwidth}{|c|X|C{1.5cm}|}
      \cline{1-3}
      \makecell*[{{C{0.5cm}}}]{\textbf{\textnumero}} &
      \makecell*[{{p{\hsize}}}]{\textbf{Критерий}} &
      \makecell*[{{C{1.5cm}}}]{\textbf{Баллы}} \\
    \end{tabularx}
    \fi
    \vspace{-1pt}
    #1  
    \ifexpcriteria
    \noindent
    \begin{tabularx}{\textwidth}{|X|c|C{1.5cm}|}
      \cline{1-3}
      \makecell*[{{p{\hsize}}}]{\textbf{Сумма}} &
      \makecell*[{{C{1.5cm}}}]{\displayexpresults} &
      \makecell*[{{C{1.5cm}}}]{} \\
      \cline{1-3}
    \end{tabularx}
    \else
    \noindent
    \begin{tabularx}{\textwidth}{|X|C{1.5cm}|}
      \cline{1-2}
      \makecell*[{{p{\hsize}}}]{\textbf{Сумма}} &
      \makecell*[{{C{1.5cm}}}]{\displayexpresults} \\
      \cline{1-2}
    \end{tabularx}
    \fi
    \vspace{2pt}
}


\NewDocumentCommand{\criteria}{mmO{}}{
    \ifexpcriteria
   % \noindent
    \begin{tabularx}{\textwidth}{|c|X|C{1.5cm}|C{1.5cm}|}
      \cline{1-4}
      \makecell*[{{C{0.5cm}}}]{\centering \arabic{expcriteriarow}} &
                \makecell*[{{p{\hsize}}}]{
                    \begin{minipage}[t]{\hsize}
                        {#1}
                        \vspace{2pt}
                    \end{minipage}
                } &
                \makecell*[{{C{1.5cm}}}]{#2~ #3} &
                \makecell*[{{C{1.5cm}}}]{} \\
        \cline{1-4}
    \end{tabularx}
	\else
   % \noindent
    \begin{tabularx}{\textwidth}{|c|X|C{1.5cm}|}
      \cline{1-3}
      \makecell*[{{p{0.5cm}}}]{\centering \arabic{expcriteriarow}} &
                \makecell*[{{p{\hsize}}}]{
                    \begin{minipage}[t]{\hsize}
                        {#1}
                        \vspace{2pt}
                    \end{minipage}
                } &
                \makecell*[{{C{1.5cm}}}]{#2~ #3} \\
        \cline{1-3}
    \end{tabularx}
	\fi
    \addvalueexpresults{#2}
    \addtocounter{expcriteriarow}{1}
    \vspace{-1pt}
}

\ExplSyntaxOff





